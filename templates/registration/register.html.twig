{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <section class="registercontainer">
    <div class="form-container">
        <div class="blocgauche-auth"><p>Pixels Makers, </br>créer, partager, soutenir</p></div>
            <div id = "auth"class="form-group">
                <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.nom, {
                        label: 'Nom *'
                    }) }}
                    {{ form_row(registrationForm.prenom, {
                        label: 'Prénom *'
                    }) }}
                    {{ form_row(registrationForm.email, {
                        label: 'E-MAIL *'
                    }) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe *'
                    }) }}
                    {# {{ form_row(registrationForm.agreeTerms) }} #}

                    <button type="submit" class="btn">Inscription</button>
                {{ form_end(registrationForm) }}
                <div class="agreeterm">
                    <p>*Champs obligatoires</p>
                    <p><a href="#">Vous êtes déjà inscrit ?</a></p>
                    <p>En cliquant sur inscription, je confirme que j’ai lu et accepté 
                    <a href="#">les conditions d’utilisation</a> de Pixels Makers, la politique de confidentialité 
                    et recevoir des courriels et des mises à jour. </p>
                </div>
            </div>
        </div>
    </div>

    </section>
{% endblock %}
